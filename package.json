{
  "name": "comment-directive",
  "version": "2.0.0",
  "description": "A text preprocessor that uses comments as conditional directives",
  "keywords": [ "comment", "directive", "conditional", "text", "preprocessor", "isomorphic" ],
  "homepage": "https://github.com/fetchTe/comment-directive",
  "license": "MIT",
  "files": [ "dist" ],
  "type": "module",
  "bin": "./dist/cli.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": { "build": "make build","test": "make test" },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@stylistic/eslint-plugin": "5.6.1",
    "@types/bun": "1.3.5",
    "@types/eslint": "9.6.1",
    "@types/node": "25.0.3",
    "@typescript-eslint/parser": "8.50.1",
    "cli-reap": "1.1.0",
    "eslint": "9.39.2",
    "globables": "3.2.0",
    "stain": "1.4.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1"
  },
  "exports": {
    ".": {"require": { "types": "./dist/index.d.cts", "default": "./dist/index.cjs" }, "import": { "types": "./dist/index.d.mts", "default": "./dist/index.js" } },
    "./index": {"require": { "types": "./dist/index.d.cts", "default": "./dist/index.cjs" }, "import": { "types": "./dist/index.d.mts", "default": "./dist/index.js" } },
    "./lang": {"require": { "types": "./dist/lang.d.cts", "default": "./dist/lang.cjs" }, "import": { "types": "./dist/lang.d.mts", "default": "./dist/lang.js" } }
